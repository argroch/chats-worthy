<%# leaving in infrastructure to implement "user approval" - in case I decide that I should approve of users in order to restrict access to the app (for Redis reasons) %>
<%# if current_user.approval == true %>

	<div class="row">
		<div class="col-md-6 offset-md-3 text-center">
			<h2>Chats-Worthy</h2>
			<p>Create a room, enter it, and start chatting!</p>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6 offset-md-3">
			<%= form_for @room, remote: true do |f| %>
				<div class="form-group">
					<%= f.select(:category_id, options_from_collection_for_select(@categories, :id, :name), {include_blank: "Choose a Room Category"}, {class: "form-control"}) %>
				</div>
				<div class="form-group">
					<%= f.text_field :topic, placeholder: "Enter a Topic to Start a Room... then press Enter!", class: "form-control" %>
				</div>
				<%= f.submit "Create Room", class: "invisible" %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<h3>Rooms by Topic</h3>
	</div>
	<div class="row">
		<div id="room" class="card-deck text-center">
			<% @rooms.each do |room| %>
				<div class="col-md-3">
					<div class="card">
						<div class="card-body">
							<i class="fas fa-<%= room.category.icon %>"></i><br>
							<p><%= link_to room.topic, room %></p>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>

