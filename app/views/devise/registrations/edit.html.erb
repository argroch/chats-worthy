<div class="row">
  <div class="col-md-8 offset-md-2">

    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email Address", autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :handle, placeholder: "Handle", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "New Password (or leave blank if not changing)", autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "New Password Confirmation", autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :current_password, placeholder: "Current Password (to confirm changes)", autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn btn-warning" %>
      </div>
    <% end %>

    <h3>Close Your Account</h3>

    <p>Unhappy? Just over this whole thing? <%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

    <%= link_to "Back", :back %>
  </div>
</div>